<div class="container my-5">
  <h1 class="text-center">Cocktails</h1>
  <div class="row justify-content-center">
    <% @cocktails.each do |cocktail| %>
    <div class="card-trip p-3 m-3">
      <img src="https://www.donnamoderna.com/wp-content/uploads/2011/01/spritz-allarancia-830x625.jpg" />
      <div class="card-trip-infos">
        <div>
          <h1><%=cocktail.name %></h1>
        </div>
        <div>
          <h2 class="card-trip-pricing">$5</h2>
        </div>
      </div>
      <%= link_to "View", cocktail_path(cocktail), class: "btn btn-primary "%>
      <%= link_to "Add description", new_cocktail_dose_path(cocktail), class: "btn btn-secondary"%>
    </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary"%>
  </div>
</div>
